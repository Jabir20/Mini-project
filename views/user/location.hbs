            <div class="card-body">
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                    card's content.</p>
            </div>
        </div>
        <div class="card col-md-3 mx-1" style="width: 18rem;">
            <img class="card-img-top" src="{{banner4}}" alt="Card image cap">
            <div class="card-body">
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                    card's content.</p>
            </div>
        </div>
        <div class="card col-md-3 mx-1" style="width: 18rem;">
            <img class="card-img-top" src="{{banner3}}" alt="Card image cap">
            <div class="card-body">
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                    card's content.</p>
            </div>
        </div>
    </div>

    <section class="border-bottom pb-4">
        <div class="container mt-2">
            <div class="row">
                {{#each places}}
                <div class="col-md-4 mt-4">
                    <div class="card" style="width: 18rem; height: 25rem">
                        <img class="card-img-top" src="/location-images/{{this._id}}.jpg" alt="Card image cap"
                            style="height: 191px;">
                        <div class="card-body">
                            <h5 class="card-title"><b>{{this.Name}}</b></h5>
                            <p class="card-text">{{this.Description}}</p>
                            <a href="/location" class="card-btn btn btn-primary">Visit</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>


    </section>