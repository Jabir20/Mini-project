    <script>
        // Assume you have a variable 'weatherCondition' with values like 'Clear', 'Rainy', 'Windy'
        var weatherCondition = {{ weatherData.weather }};  // Replace this with the actual weather condition
        // var weatherCondition = 'windy';  // Replace this with the actual weather condition

        // Function to add weather-specific classes to activities
        function addWeatherClasses(weather) {
            var activityContainers = document.querySelectorAll('.loc-activities .card');

            activityContainers.forEach(function (activityContainer) {
                // Extract the weather type from the activity container's class
                var activityWeatherType = activityContainer.classList[0].replace('weather-', '');

                // Check if the weather type matches the current weather condition
                if (activityWeatherType.toLowerCase() === weather.toLowerCase()) {
                    // Add a class to highlight or modify the styling for matching activities
                    activityContainer.classList.add('highlight-activity');
                }
            });
        }

        // Example: You might get the weather condition from your API response
        // Replace this with the actual code to get weather condition from your API
        // For demonstration, using a fixed value here
        addWeatherClasses(weatherCondition);
    </script>

