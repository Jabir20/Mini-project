<section class="mt-4">
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Location</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each places}}
                <tr>
                    <th scope="row">1</th>
                    <th>{{this.Name}}</th>
                    <td>{{this.Description}}</td>
                    <td><img src="/location-images/{{this._id}}.jpg" style="width: 70px; height:50px"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>